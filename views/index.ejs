<!DOCTYPE html>
<html>
<head>
 <title><%= title %></title>

 <!-- bootstrap css -->
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
 <link href="https://fonts.googleapis.com/css?family=Chela+One|Gloria+Hallelujah" rel="stylesheet">

 <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>

  <div class="row">
      <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="#">Estella</a>
            </div>
            <ul class="nav navbar-nav">
              <li class="active"><a href="/">Home</a></li>
              <li><a href="contact">Contact</a></li>
              <li><a href="new">New Post</a></li>
              <li><a href="edit">Edit Post</a></li>
              <li><a href="archive">Archives</a></li>
              <li><a href="article">Articles</a></li>
            </ul>
          </div>
        </nav>
  </div>

  <div class="row">
    <div class="jumbotron">
        <h1><%= title %></h1>
    </div> 
  </div>
 
 
 <div class="row">
    <% if (posts) { %>

      <% posts.forEach(function(post){ %>
       <div class="col-xs-12 co;-md-6 col-lg-4">
           <div class="panel panel-primary">
   
               <div class="panel-heading">
                 <h3 class="panel-title"><h3><%= post.title %></h3></h3>
               </div>
        
               <div class="panel-body">
                 <p> <%= post.content %></p>
                 <img src="<%=post.image %>" alt="" width="100%">
               </div>
               <div class="panel-footer">
                 <p>Author: <%= post.Author %></p>
                 <p><%= post.time %></p>
                 <p><%= post.date %></p>
                 <a class="btn1"  role="button">Read More</a>
                 <br>
                 <a class="btn2" href="#" role="button">Edit</a>
               </div>
             </div>
        
       </div>
        
   
      
   
      <% }); %>
   
    <% } else { %>
   
      <p>You have no blog posts</p>
   
    <% } %>
 </div>

</body>
</html>