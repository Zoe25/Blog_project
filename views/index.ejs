 <div class="row">
    <% if (posts) { %>

      <% for ( var i = 0; i<3;i++){%>

       <div class="col-xs-12 co;-md-6 col-lg-4">
           <div class="panel panel-primary">
   
               <div class="panel-heading">
                 <h3 class="panel-title"><h3><%= posts[i].title %></h3></h3>
               </div>
        
               <div class="panel-body">
                 <p> <%= posts[i].content %></p>
                 <img src="<%=posts[i].image %>" alt="" width="100%">
               </div>
               <div class="panel-footer">
                 <p>author: <%= posts[i].author %></p>
                 <p><%= posts[i].time %></p>
                 <p><%= posts[i].date %></p>
                 
               </div>
             </div>
        
       </div>
        
   
      
   
      <% } %>
   
    <% } else { %>
   
      <p>You have no blog posts</p>
   
    <% } %>
 </div>

