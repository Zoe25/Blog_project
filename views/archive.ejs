<!DOCTYPE html>
<html>
<head>
 <title><%= title %></title>

 <!-- bootstrap css -->
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
 <link href="https://fonts.googleapis.com/css?family=Chela+One|Gloria+Hallelujah" rel="stylesheet">

 <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>

  <div class="row">
      <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="#">Estella</a>
            </div>
            <ul class="nav navbar-nav">
              <li><a href="/">Home</a></li>
              <li><a href="contact">Contact</a></li>
              <li><a href="new">New Post</a></li>
              <!-- <li><a href="edit">Edit Post</a></li> -->
              <li><a href="archive">Archives</a></li>
              <li><a href="login">Login</a></li>
            </ul>
          </div>
        </nav>
  </div>

  <div class="row">
    <div class="jumbotron">
        <h1><%= title %></h1>
    </div> 
  </div>
 
 
 <div class="row">
    <% if (posts) { %>

      <% posts.forEach(function(post){ %>
       
        <div class="col-xs-12 col-md-6 col-lg-6">
          <div class="panel panel-primary">

            <div class="panel-heading">
              <h3 class="panel-title"><%= post.title %> </h3>
            </div>

            <div class="panel-body">
              <!-- <img src="<%=post.image %>" alt="" width="100%" > -->
              <strong><p><%= post.date %></p></strong>
              <!-- <p><%- post.content %></p> -->
              <a class="btn btn-primary btn-lg" href="/blog/<%= post.id %>" role="button">Read more</a>
              <a class="btn btn-primary btn-lg" href="/delete/<%= post.id%>" role="button">Delete</a>
              <a class="btn btn-primary btn-lg" href="/edit/<%=post.id%>"role="button">Edit</a>
            </div>

            <div class="panel-footer">Author: <%= post.author %></div>
          </div>
        </div>
   
      
   
      <% }); %>
   
    <% } else { %>
   
      <p>You have no blog posts</p>
   
    <% } %>
 </div>
</div>
<!-- <div>
  <div class="footer">Copyright @ Estella'sBookBlog | 2018</div>
</div> -->

<div class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <p class="navbar-text pull-left">© 2018 - Site Built By Zoe Estella
         <a href="http://tinyurl.com/tbvalid" target="_blank" >Copyright</a>
    </p>
    
    <a href="http://youtu.be/zJahlKPCL9g" class="navbar-btn btn-danger btn pull-right">
    <span class="glyphicon glyphicon-star"></span>  Subscribe on YouTube</a>
  </div>
</div>


</body>
</html>